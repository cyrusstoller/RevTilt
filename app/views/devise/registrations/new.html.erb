<div class="row">
  <div class="col-xs-4">
    <h2>Sign up</h2>
    <br />
    
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'form-vertical' }) do |f| %>
      <%= render 'shared/error_messages', :object => f.object %>

      <div class="form-group">
        <%= f.label :username, :class => 'control-label' %>
        <%= f.text_field :username, :class => 'form-control text_field' %>
      </div>

      <div class="form-group">
        <%= f.label :email, :class => 'control-label' %>
        <%= f.email_field :email, :class => 'form-control email_field' %>
      </div>

      <div class="form-group">
        <%= f.label :password, :class => 'control-label' %>
        <%= f.password_field :password, :class => 'form-control password_field' %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, :class => 'control-label' %>
        <%= f.password_field :password_confirmation, :class => 'form-control password_confirmation' %>
      </div>

      <div>
        <%= f.submit "Sign up", :class => 'btn btn-primary' %>
      </div>
    <% end %>

    <br />
    <%= render "devise/shared/links" %>
  </div>
</div>

