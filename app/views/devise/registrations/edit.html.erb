<h2><%= resource_name.to_s.humanize %> Account Settings</h2>
<br />

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), 
    :html => { :method => :put, :class => "form-horizontal" }) do |f| %>
  <%= render "shared/error_messages", :object => f.object %>

  <div class="form-group">
    <%= f.label :username, :class => 'control-label col-xs-2' %>
    <div class="col-xs-4">
      <%= f.text_field :username, :class => 'form-control text_field' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, :class => 'control-label col-xs-2' %>
    <div class="col-xs-4">
      <%= f.email_field :email, :class => 'form-control email_field' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :current_password, :class => 'control-label col-xs-2' %>
    <div class="col-xs-4">
      <%= f.password_field :current_password, :class => 'form-control password_field', :autocomplete => "off" %>
    </div>
    <div class="col-xs-6">
      <span class="help-block"><i>(we need your current password to confirm your changes)</i></span>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, :class => 'control-label col-xs-2' %> 
    <div class="col-xs-4">
      <%= f.password_field :password, :class => 'form-control password_field', :autocomplete => "off" %>
    </div>
    <div class="col-xs-6">
      <span class="help-block"><i>(leave blank if you don't want to change it)</i></span>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, :class => 'control-label col-xs-2' %>
    <div class="col-xs-4">
      <%= f.password_field :password_confirmation, :class => 'form-control password_confirmation' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-xs-4 col-xs-offset-2">
      <%= f.submit "Update account", :class => 'btn btn-primary' %>
    </div>
  </div>
<% end %>
