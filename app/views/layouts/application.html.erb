<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag asset_path("favicon.png"), :type => 'image/png' %>
  <%= render :partial => 'layouts/google_analytics' %>
</head>
<body>

  <div class="container">
    <%= render "layouts/header" %>
  </div>
  <div class="container">
    <%= render "layouts/search_bar" %>
    <%= render "shared/flash_messages", :flash => flash %>
    <%= yield :above_iframe %>
  </div>
  
  <%= yield :unbounded %>
  
  <div class="container">
    <%= yield %>
  </div>
  
  <hr />
  
  <%= render "layouts/footer" %>
</body>

