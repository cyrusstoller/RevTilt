    "revtiltApiUrl": "http://revtilt.com/api/v1/organizations/309.json",
    "categoryId": 0,
    "categoryText": "other",
    "reviewSummary": {
      "numReviews": 2,
      "avgReview": 3.5
    },
    "location": {
      "latitude": 37.3045312,
